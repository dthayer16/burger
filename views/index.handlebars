<div class="row align-content-center">
  <div class="d-flex justify-content-center">
    <h1>Burgers!</h1>
  </div>
</div>

<h2>Burgers that are not devoured!</h2>

<ul class="list-group">
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul class="list-group">
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>
<br>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" class="form-control" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input class="form-check-input" type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input class="form-check-input" type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button type="submit" class="btn btn-primary btn-lg mb-4">Add Burger</button>

</form>